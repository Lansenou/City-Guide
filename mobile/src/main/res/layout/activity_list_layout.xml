<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:maxHeight="55dp"
        android:maxWidth="55dp"
        android:src="@drawable/no_image" />

    <!--Progress Bar-->
    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxHeight="55dp"
        android:maxWidth="55dp">

        <ProgressBar
            android:id="@+id/loadingPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/activityTekst1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPicture"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/ivPicture"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toRightOf="@+id/ivPicture"
        android:text="Test"
        android:textColor="@color/ListViewText"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/ivPicture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivPicture"
        android:layout_marginRight="25dp"
        android:background="#00000000"
        android:clickable="true"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/plus_circle" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageButton"
        android:layout_toLeftOf="@+id/EstTimeTxt"
        android:layout_toRightOf="@+id/ratingBar"
        android:text="X.X Km"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/EstTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton"
        android:text="10 Min"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />


    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distanceText"
        android:layout_alignBottom="@+id/EstTimeTxt"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/ivPicture"
        android:layout_toRightOf="@+id/ivPicture"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.01" />
</RelativeLayout>